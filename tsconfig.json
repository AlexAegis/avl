{
	"compilerOptions": {
		"lib": ["es2017", "esnext.asynciterable"],
		"declaration": true,
		"module": "commonjs",
		"target": "es2015",
		"noImplicitAny": true,
		"rootDir": "./src/",
		"outDir": "./dist/",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["./src/**/*", "./test/**/*"],
	"exclude": ["**/node_modules/**/*"]
}
