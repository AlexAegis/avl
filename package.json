		"tslint": "^5.13.1",
		"typedoc": "^0.14.2",
		"typescript": "3.3.3333"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"src/**/*.ts"
		],
		"exclude": [
			"node_modules/",
			"test/**/*.spec.ts",
			"test/model/"
		],
		"reporter": [
			"lcov"
		],
		"all": true
